[ -z ${load_part_pipes} ] && return

# sed oneliners doesnt really need a while loop to work as it can just be echo $1 | sed ..

function rem-colors() {
    while read s; do echo "${s}" | sed "s/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[m|K]//g"; done
}

function ltrim() {
    while read s; do echo "${s}" | sed 's/^ *//g'; done    
}

function rtrim() {
    while read s; do echo "${s}" | sed 's/ *$//g'; done    
}